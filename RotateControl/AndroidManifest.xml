<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.swijaya.android.rotatecontrol"
    android:versionCode="2"
    android:versionName="1.0.1"
    android:installLocation="auto" >

    <uses-sdk android:minSdkVersion="10" android:targetSdkVersion="14"/>
    
    <uses-permission android:name="android.permission.WRITE_SETTINGS"/>

    <application
        android:icon="@drawable/ic_launcher_rotate"
        android:label="@string/app_name" >
        <service
            android:name=".RotateControlService"
            android:exported="false" >
        </service>
        <receiver
            android:name=".RotateControlWidgetProvider" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/rotatecontrol_appwidget_info" />
        </receiver>
    </application>

</manifest>